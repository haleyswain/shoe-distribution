<h3><%= @store.name() %></h3>

<% if @brands.any?() %>
<h4><%= @store.name() %>s Shoe Brands</h4>

<ul>
  <% @brands.each() do |brand| %>
  <li><a href='/brands/<%= @brand.id() %>'><%= brand.name() %></a></li>
  <% end %>
</ul>

<% else %>
  <h4><%= @store.name() %> doesnt have any brands yet! Add one below. </h4>
<% end %>

<p>Add a new Shoe Brand </p>
<form action='/store/<%= @store.id() %>' method = 'post'>
  <input id = 'store_id' name = 'store_id' type = 'hidden' value='<%= @store.id() %>'>
  <label for='name'>New Brand:</label>
  <input id='name' name='name' type='text' class='form-control'>
  <button type='submit' class='btn btn-default'>Add New Shoe Brand</button>
</form>

<p>Edit the name of this Shoe Store</p>
<form action='/stores/<%=@store.id() %>/edit' method='post' class='form-inline'>
  <input name='_method' type='hidden' value='patch'>
  <label for='edit-store'></label>
  <input id='edit-store' name='edit-store' type='text' class='form_control'></input>
  <button type='submit'>Edit Store</button>
</form>
