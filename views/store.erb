<h3><%= @store.name() %></h3>

<% if @brands.any?() %>
  <form action='/stores/<%= store.id() %>' method = 'post'>
    <input type = 'hidden' name='_method' value = 'patch'>

    <% @brands.each() do |brand| %>
    <div class = 'checkbox'>
      <label>
        <input type="checkbox" name="brand_ids[]" value="<%= brand.id() %>"><%= brand.name() %>
       </label>
     </div>
   <% end %>
    <button type="submit">Add brands</button>
  </form>
   <% end %>

<% if @store.brands().any?() %>
  <p> Here are all the brands at this store </p>
<ul>
  <% @store.brands().each() do |brand| %>
    <li><%= brand.name() %></li>
  <% end %>
</ul>
<% else %>
<p>There are no brands yet!</p>
<% end %>
<p>Add a new Shoe Brand </p>
<form action='/store/<%= @store.id() %>' method = 'post'>
  <input id = 'store_id' name = 'store_id' type = 'hidden' value='<%= @store.id() %>'>
  <label for='name'>New Brand:</label>
  <input id='name' name='name' type='text' class='form-control'>
  <button type='submit' class='btn btn-default'>Add New Shoe Brand</button>
</form>

<p>Edit the name of this Shoe Store</p>
<form action='/stores/<%=@store.id() %>/edit' method='post' class='form-inline'>
  <input name='_method' type='hidden' value='patch'>
  <label for='edit-store'></label>
  <input id='edit-store' name='edit-store' type='text' class='form_control'></input>
  <button type='submit'>Edit Store</button>
</form>

<p>Delete this Shoe Store</p>
<form action='/store/<%= @store.id() %>/delete' method='post'>
  <input name='_method' type='hidden' value='delete'>
  <button class='btn btn-default'> Delete this Store</button>
</form>
