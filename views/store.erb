<h3><%= @store.name() %></h3>

  <ul>
    <% if @store.brands.any?() %>
      <h5><%= @store.name %> has the following brands in the store:<h5>
        <% @store.brands().each() do |brand| %>
      <li><a href="/brands/<%= brand.id() %>"><%= brand.name()%></a></li>
    <% end %>
  </ul>
    <% else %>
      <p>This store doesn't have any shoe brands! Add one below. </p>
    <% end %>

<form action='/stores/<%= @store.id  %>/brands' method = 'post'>
  <input id = 'store_id' name = 'store_id' type = 'hidden' value='<%= @store.id() %>'>
  <label for='name'>New Brand:</label>
  <input id='name' name='name' type='text' class='form-control'>
  <button type='submit' class='btn btn-default'>Add New Shoe Brand</button>
</form>

<p>Edit the name of this Shoe Store</p>
<form action='/stores/<%=@store.id() %>' method='post'>
  <input name='_method' type='hidden' value='patch'>
  <label for='edit-store'></label>
  <input id='edit-store' name='edit-store' type='text' class='form_control'>
  <button type='submit' class ='btn btn-default'>Edit Store</button>
</form>

<p>Delete this Shoe Store</p>
<form action='/stores/<%= @store.id() %>' method='post'>
  <input name='_method' type='hidden' value='delete'>
  <button class='btn btn-default'>Delete this Store</button>
</form>
